{
  "name": "nftlottery-monorepo",
  "private": true,
  "workspaces": ["web"],
  "scripts": {
    "deploy": "ts-node --transpile-only ops/deploy.ts",
    "ci:checks": "gh pr checks --watch",
    "format": "prettier --write .",
    "format:sol": "forge fmt evm/src evm/test evm/script",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ],
    "**/*.sol": [
      "forge fmt"
    ]
  }
}
